# docs/Gemfile
source "https://rubygems.org"

# Static site generator
gem "jekyll", "~> 4.4"

# Internationalization plugin (built via CI; GitHub Pages serves static output)
# https://github.com/untra/polyglot
gem "jekyll-polyglot", "~> 1.8"

# Theme used by docs/_config.yml
gem "minima", "~> 2.5"

# GitHub-flavored Markdown support
gem "kramdown-parser-gfm", "~> 1.1"

# Ruby 3+ local serving requires webrick
gem "webrick", "~> 1.8"

# Ensure compatibility with workflow expectation
gem "rake", "~> 13.3"